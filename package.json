{
  "name": "fjp",
  "version": "0.1.0",
  "description": "My functional javascript playground",
  "module": "es/index.js",
  "main": "src/index.js",
  "unpkg": "dist/fjp.min.js",
  "jsdelivr": "dist/fjp.min.js",
  "browser": "dist/fjp.min.js",
  "files": [
    "es",
    "src",
    "dist"
  ],
  "scripts": {
    "test": "cross-env BABEL_ENV=cjs ava --verbose",
    "bench": "cross-env BABEL_ENV=cjs node ./benchRunner.js",
    "coverage": "nyc --reporter=lcov npm run test && nyc report && codecov",
    "travis": "npm run coverage;BABEL_ENV=es babel source --out-dir es;NODE_ENV=production BABEL_ENV=umd rollup -c -o dist/fjp.min.js",
    "clean": "prettier --write --config .prettierrc \"source/**/*.js\" && eslint -c .eslintrc --fix --color --ignore-path .eslintignore \"source/**/*.js\"",
    "build:es": "cross-env BABEL_ENV=es babel source --out-dir es",
    "build:cjs": "cross-env BABEL_ENV=cjs babel source --out-dir src",
    "build:umd": "cross-env NODE_ENV=development BABEL_ENV=umd rollup -c -o dist/fjp.js",
    "build:umd:min": "cross-env NODE_ENV=production BABEL_ENV=umd rollup -c -o dist/fjp.min.js",
    "build": "npm run build:es && npm run build:cjs && npm run build:umd && npm run build:umd:min",
    "prepublish": "npm run build",
    "release:first": "standard-version --first-release",
    "release": "standard-version --no-verify",
    "release:full": "npm run release && git push --follow-tags origin master && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belsrc/fjp.git"
  },
  "bugs": {
    "url": "https://github.com/belsrc/fjp/issues"
  },
  "author": "bryan@bryanckizer.com",
  "license": "MIT",
  "devDependencies": {
    "ava": "0.24.0",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-plugin-annotate-pure-calls": "0.2.2",
    "babel-plugin-external-helpers": "6.22.0",
    "babel-plugin-transform-es2015-modules-commonjs": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-register": "6.26.0",
    "benchmark": "2.1.4",
    "cli-table": "0.3.1",
    "codecov": "3.0.0",
    "cross-env": "5.1.3",
    "eslint": "4.15.0",
    "glob": "7.1.2",
    "microtime": "2.1.7",
    "nyc": "11.4.1",
    "prettier": "1.9.2",
    "rollup": "0.54.1",
    "rollup-plugin-babel": "3.0.3",
    "rollup-plugin-babili": "3.1.1",
    "rollup-plugin-node-resolve": "3.0.2",
    "standard-version": "4.3.0"
  }
}
